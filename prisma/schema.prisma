generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  isAdmin       Boolean
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("users")
}

model Category {
  id    String @id @default(uuid())
  title String

  @@map("categories")
}

model Movie {
  id   String @id @default(uuid())
  name String

  description String
  small_cover String
  cover       String
  age_group   Int

  @@map("movies")
}
